extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li
				a(href="/assets/list") 资产列表
			li.active 
				a(href="#") 资产详情
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1 资产详情
			.row
				.col-xs-12
					form.form-horizontal(role='form')
						.form-group
							label.col-sm-4.control-label.no-padding-right 资产名字 
							.col-sm-8
								input#assets_name.col-xs-10.col-sm-4(type='text', placeholder='资产名字',name="assets[name]",value=assets.name,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right  资产类型 
							.col-sm-8
								input#assets_type.col-xs-10.col-sm-4(type='text', placeholder='资产名字',name="assets[name]",value=assets.type,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 资产价格
							.col-sm-8
								input#assets_price.col-xs-10.col-sm-4(type='text', placeholder='资产价格',name="assets[price]",value=assets.price,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right(for='form-field-1')  备注
							.col-sm-8
								textarea#assets_remark.col-xs-10.col-sm-4(name="assets[remark]",disabled="disabled") #{assets.remark}	
								


								
						