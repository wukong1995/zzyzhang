extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li
				a(href="/share/list") 股票列表
			li.active 
				a(href="#") 股票详情
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1 股票详情
			.row
				.col-xs-12
					form.form-horizontal(role='form')
						.form-group
							label.col-sm-4.control-label.no-padding-right 股票名字 
							.col-sm-8
								input#share_name.col-xs-10.col-sm-4(type='text', placeholder='股票名字',name="share[name]",value=share.name,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right 股数 
							.col-sm-8
								input#share_name.col-xs-10.col-sm-4(type='text', placeholder='股数',name="share[count]",value=share.count,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right  买入价格 
							.col-sm-8
								input#share_type.col-xs-10.col-sm-4(type='text', placeholder='买入价格',name="share[first_price]",value=share.first_price,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 卖出价格
							.col-sm-8
								input#share_price.col-xs-10.col-sm-4(type='text', placeholder='卖出价格',name="share[last_price]",value=share.last_price,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 收入
							.col-sm-8
								input#share_price.col-xs-10.col-sm-4(type='text', placeholder='卖出价格',name="share[income]",value=share.income,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right(for='form-field-1')  备注
							.col-sm-8
								textarea#bond_remark.col-xs-10.col-sm-4(name="bond[remark]",readonly="readonly") #{share.remark}	
						.form-group
							label.col-sm-4.control-label.no-padding-righ 创建日期
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='收益率',disabled="disabled",value="#{moment(share.meta.createAt).format('YYYY-MM-DD')}")


								
						