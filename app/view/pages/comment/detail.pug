extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li
				a(href="/comment/list") 反馈列表
			li.active 
				a(href="#") 反馈详情
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1 反馈详情
			.row
				.col-xs-12
					form#comment_form.form-horizontal(role='form')
						.form-group
							label.col-sm-4.control-label.no-padding-right 反馈人 
							.col-sm-8
								input#comment_name.col-xs-10.col-sm-4(type='text', placeholder='反馈名字',name="comment[name]",value=comment.account.name,disabled="disabled")
						
						.form-group
							label.col-sm-4.control-label.no-padding-right(for='form-field-1')  内容
							.col-sm-8
								textarea#bond_remark.col-xs-10.col-sm-4(name="bond[remark]",readonly="readonly") #{comment.remark}	
						.form-group
							label.col-sm-4.control-label.no-padding-righ 创建日期
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='创建日期',disabled="disabled",value="#{moment(comment.createAt).format('YYYY-MM-DD')}")


								
						