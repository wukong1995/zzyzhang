extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li
				a(href="/wishlist/list") 心愿单列表
			li.active 
				a(href="#") 心愿单详情
		#nav-search.nav-search
			form.form-search
				span.input-icon
					input#nav-search-input.nav-search-input(type="text", placeholder="Search ...", autocomplete="off")
					i.ace-icon.fa.fa-search.nav-search-icon
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1 心愿单详情
			.row
				.col-xs-12
					form#wishlist_form.form-horizontal(role='form',method="POST",action="/wishlist/action/save")
						.form-group
							label.col-sm-4.control-label.no-padding-right 心愿单名字 
							.col-sm-8
								input#wishlist_name.col-xs-10.col-sm-4(type='text', placeholder='心愿单名字',name="wishlist[name]",value=wishlist.name,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right  心愿单类型 
							.col-sm-8
								input#wishlist_type.col-xs-10.col-sm-4(type='text', placeholder='心愿单名字',name="wishlist[product_type]",value=wishlist.product_type,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 心愿单价格
							.col-sm-8
								input#wishlist_price.col-xs-10.col-sm-4(type='text', placeholder='心愿单价格',name="wishlist[price]",value=wishlist.price,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right(for='form-field-1')  备注
							.col-sm-8
								input#wishlist_remark.col-xs-10.col-sm-4(type='text', placeholder='备注',name="wishlist[remark]",value=wishlist.remark,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 创建日期
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='收益率',disabled="disabled",value="#{moment(wishlist.meta.createAt).format('YYYY-MM-DD')}")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 修改日期
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='收益率',disabled="disabled",value="#{moment(wishlist.meta.updateAt).format('YYYY-MM-DD')}")


								
						