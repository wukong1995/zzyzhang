extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li
				a(href="/assets/list") 心愿单列表
			li.active 
				a(href="#") 心愿单详情
		#nav-search.nav-search
			form.form-search
				span.input-icon
					input#nav-search-input.nav-search-input(type="text", placeholder="Search ...", autocomplete="off")
					i.ace-icon.fa.fa-search.nav-search-icon
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1 心愿单详情
			.row
				.col-xs-12
					form#assets_form.form-horizontal(role='form',method="POST",action="/assets/action/save")
						.form-group
							label.col-sm-4.control-label.no-padding-right 心愿单名字 
							.col-sm-8
								input#assets_name.col-xs-10.col-sm-4(type='text', placeholder='心愿单名字',name="assets[name]",value=assets.name,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right  心愿单类型 
							.col-sm-8
								input#assets_type.col-xs-10.col-sm-4(type='text', placeholder='心愿单名字',name="assets[product_type]",value=assets.product_type,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-righ 心愿单价格
							.col-sm-8
								input#assets_price.col-xs-10.col-sm-4(type='text', placeholder='心愿单价格',name="assets[price]",value=assets.price,disabled="disabled")
						.form-group
							label.col-sm-4.control-label.no-padding-right(for='form-field-1')  备注
							.col-sm-8
								input#assets_remark.col-xs-10.col-sm-4(type='text', placeholder='备注',name="assets[remark]",value=assets.remark,disabled="disabled")


								
						