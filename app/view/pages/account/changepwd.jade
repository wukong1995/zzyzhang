extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li.active 
				a(href="#") 密码修改
	.page-content
		include ../page
		.page-content-area
			.row
				.col-xs-12
					form#form.form-horizontal(method="POST",action="/user/changepwd")
						.tabbable
							ul.nav.nav-tabs
								li.active
									a(data-toggle='tab', href='#edit-password')
										i.blue.ace-icon.fa.fa-key.bigger-125
										| 																更改密码
							.tab-content.profile-edit-tab-content
								#edit-password.tab-pane(style="display:block;")
									.space-10
									.form-group
										label.col-sm-3.control-label.no-padding-right(for='pwd') 旧密码
										.col-sm-9
											input#pwd(type='password',name="user[pwd]")
									.space-4
									.form-group
										label.col-sm-3.control-label.no-padding-right(for='newpwd') 新密码
										.col-sm-9
											input#newpwd(type='password',name="user[newpwd]")
									.space-4
									.form-group
										label.col-sm-3.control-label.no-padding-right(for='confirmpwd') 确认密码
										.col-sm-9
											input#confirmpwd(type='password',name="confirmpwd")
						.clearfix.form-actions
							.col-md-offset-3.col-md-9
								button.btn(type='reset')
									i.ace-icon.fa.fa-undo.bigger-110
									| 		重置
								button#form_submit.btn.btn-info(type='button')
									i.ace-icon.fa.fa-check.bigger-110
									| 		确认
	script(src="/javascript/account_pwd.js")
							

