extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li.active 
				a(href="#") 添加债券
		#nav-search.nav-search
			form.form-search
				span.input-icon
					input#nav-search-input.nav-search-input(type="text", placeholder="Search ...", autocomplete="off")
					i.ace-icon.fa.fa-search.nav-search-icon
	.page-content
		include ../page
		.page-content-area
			.page-header
				h1
					| 添加债券
					small
						i.ace-icon.fa.fa-angle-double-right
						| 	请填写以下信息：
			.row
				.col-xs-12
					form#bond_form.form-horizontal(role='form',method="POST",action="/bond/action/save")
						if bond._id
							input(type="hidden",name="bond[_id]",value=bond._id)
						.form-group
							label.col-sm-4.control-label.no-padding-right 债券名字 
							.col-sm-8
								input#bond_name.col-xs-10.col-sm-4(type='text', placeholder='债券名字',name="bond[name]",value=bond.name)
						.form-group
							label.col-sm-4.control-label.no-padding-right  债券代码 
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='债券代码',name="bond[code]",value=bond.code)
						.form-group
							label.col-sm-4.control-label.no-padding-righ 买入价格
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='买入价格',name="bond[purchase]",value=bond.purchase)
						.form-group
							label.col-sm-4.control-label.no-padding-righ 收益率
							.col-sm-8
								input#bond_price.col-xs-10.col-sm-4(type='text', placeholder='收益率',name="bond[yield]",value=bond.yield)
						.form-group
							label.col-sm-4.control-label.no-padding-right  备注
							.col-sm-8
								textarea#bond_remark.col-xs-10.col-sm-4(name="bond[remark]") #{bond.remark}						
						.clearfix.form-actions
							.col-md-offset-4.col-md-4
								button#form_submit.btn.btn-info(type='button')
									i.ace-icon.fa.fa-check.bigger-110
									| 	确定
								button.btn(type='reset')
									i.ace-icon.fa.fa-undo.bigger-110
									| 	重置
	script(src="/javascript/bond_add.js")

								
						