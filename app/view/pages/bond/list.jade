extends ../../layout

block content
	#breadcrumbs.breadcrumbs
		script(type="text/javascript").
			try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
		ul.breadcrumb
			li
				i.ace-icon.fa.fa-home.home-icon
				a(href="/index") 主页
			li.active 
				a(href="#") 资产列表
		#nav-search.nav-search
			form.form-search
				span.input-icon
					input#nav-search-input.nav-search-input(type="text", placeholder="Search ...", autocomplete="off")
					i.ace-icon.fa.fa-search.nav-search-icon
	.page-content
		include ../page
		.page-content-area
			.row
				.col-xs-12
					.table-header
						| 资产列表
					div
						table#sample-table-2.table.table-striped.table-bordered.table-hover
							thead
								tr
									th.center
										label.position-relative
											input.ace(type='checkbox')
											span.lbl
									th 名字
									th 代码
									th.hidden-480 买入价格
									th.hidden-480 收益率
									th.hidden-480 收入
									th 备注
									th 创建日期
									th 修改日期
									th 操作
							tbody
								each item in bond
									tr
										td.center
											label.position-relative
												input.ace(type='checkbox')
												span.lbl
										td #{item.name}
										td #{item.code}
										td #{item.purchase}
										td #{item.yield}
										td #{item.income}
										td #{item.remark}
										td #{moment(item.meta.createAt).format('YYYY-MM-DD')}
										td #{moment(item.meta.updateAt).format('YYYY-MM-DD')}
										td
											a.btn.btn-xs.btn-success(href="/bond/detail/#{item._id}") 详情
											
											a.btn.btn-xs.btn-success(href="/bond/edit/#{item._id}") 编辑
											button.btn.btn-xs.btn-danger(type="button") 删除
						.row
							.col-xs-6
								button.btn.btn-xs.btn-danger(type="button") 删除
							.col-xs-6
								#sample-table-2_paginate.dataTables_paginate.paging_simple_numbers
									ul.pagination
										if currentPage != 1
											li.paginate_button.previous
												a(href='/bond/list?p=1') 首页
										- for (var i = 0; i < totalPage; i++) {
											- if (currentPage == (i + 1)) {
												li.paginate_button.active
													a(href='#') #{currentPage}
											- }
											- else {
												li.paginate_button
													a(href='/bond/list?p=#{i+1}') #{i + 1}
											- }
										- }

										li.paginate_button.next
											if currentPage != totalPage
												a(href='/admin/list?p=#{currentPage+1}' ) 下一页
	script(src="/javascript/table.js")

